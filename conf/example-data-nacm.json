{
    "ietf-netconf-acm:nacm": {
        "enable-nacm": true,
        "read-default": "permit",
        "write-default": "deny",
        "exec-default": "deny",
        "groups": {
            "group": [
                {
                    "name": "admin",
                    "user-name": [
                        "example@mail.cz"
                    ]
                }
            ]
        },
        "rule-list": [
            {
                "name": "admin-acl",
                "group": [
                    "admin"
                ],
                "rule": [
                    {
                        "name": "permit-zone-config-access",
                        "path": "cznic-dns-slave-server:dns-server/zones/zone",
                        "access-operations": "create update delete",
                        "comment": "Users can write zone configuration",
                        "action": "permit"
                    },
                    {
                        "name": "permit-remote-server-config-access",
                        "path": "cznic-dns-slave-server:dns-server/remote-server",
                        "access-operations": "create update delete",
                        "comment": "Users can write zone configuration",
                        "action": "permit"
                    }
                ]
            }
        ]
    },
    "cznic-dns-slave-server:dns-server": {
			"description": "Simple configuration of a slave server.",
			"remote-server": [
				{
					"name": "icann-axfr",
					"description": "ICANN-provided source for the root zone.",
					"remote": {
						"ip-address": "2620:0:2d0:202::132"
					}
				},
				{
					"name": "exrec",
					"description": "Example recipient of notifications.",
					"remote": {
						"ip-address": "198.51.100.1",
						"port": 6378
					}
				}
			],
			"zones": {
                "zone":[{
                    "domain": ".",
                    "description": "root zone",
                    "master": ["icann-axfr"],
                    "notify": {
                        "recipient": ["exrec"]
                    }
                }]
        }
		}
}